{
  "name": "job-application-copilot",
  "version": "0.1.0",
  "description": "Local-first job application automation tool with AI-powered assistance and human-in-the-loop safety",
  "main": "dist/cli/index.js",
  "bin": {
    "copilot": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:seed": "tsx src/db/seed.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "job-application",
    "automation",
    "cli",
    "ai",
    "playwright",
    "job-search"
  ],
  "author": "Will Reynoir <wreynoir>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "axios": "^1.7.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "inquirer": "^9.2.0",
    "node-notifier": "^10.0.1",
    "ora": "^8.0.0",
    "playwright": "^1.48.0",
    "rss-parser": "^3.13.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.17.0",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
